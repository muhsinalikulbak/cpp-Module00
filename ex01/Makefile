NAME = phonebook

CXX = c++
CXXFLAGS =  -std=c++98

SRCS = Contact.cpp \
	   PhoneBook.cpp \
	   main.cpp

OBJS_DIR = obj
OBJS = $(OBJS_DIR)/Contact.o $(OBJS_DIR)/PhoneBook.o $(OBJS_DIR)/main.o

HEADERS = Contact.hpp PhoneBook.hpp

# Make silent
MAKEFLAGS += --silent

all: $(NAME)

$(NAME): $(OBJS_DIR) $(OBJS)
	@echo "âœ… Compiling $(NAME).."
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
	@echo "âœ… $(NAME) Ready!"

$(OBJS_DIR)/%.o: %.cpp $(HEADERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJS_DIR):
	mkdir -p $(OBJS_DIR)

clean:
	@echo "ðŸ§¹ Cleaning objects..."
	rm -rf $(OBJS_DIR)
	@echo "âœ… Objects cleaned!"

fclean: clean
	@echo "ðŸ§¹ Removing executable..."
	rm -f $(NAME)
	@echo "âœ… Full clean done!"

re: fclean all

.PHONY: all clean fclean re
