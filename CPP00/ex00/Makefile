NAME = megaphone

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRCS = megaphone.cpp
OBJS_DIR = obj
OBJS = $(OBJS_DIR)/megaphone.o

# Make silent
MAKEFLAGS += --silent

all: $(NAME)

$(NAME): $(OBJS_DIR) $(OBJS)
	@echo "âœ… Compiling $(NAME).."
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
	@echo "âœ… $(NAME) Ready!"

$(OBJS_DIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJS_DIR):
	mkdir -p $(OBJS_DIR)

clean:
	@echo "ðŸ§¹ Cleaning objects..."
	rm -rf $(OBJS_DIR)
	@echo "âœ… Objects cleaned!"

fclean: clean
	@echo "ðŸ§¹ Removing executable..."
	rm -f $(NAME)
	@echo "âœ… Full clean done!"

re: fclean all

.PHONY: all clean fclean re
